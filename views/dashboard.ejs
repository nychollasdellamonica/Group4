<%- include('partials/header') %>
<%- include('partials/menu') %>

    <% if (session.user.STATUS == '1') { %>
    <div class="row justify-content-end mb-3"> <!-- Align items to the right -->
        <div class="col-auto">
            <a href="/addCourse" class="btn btn-primary">Add New Course</a>
        </div>
    </div>
    <% } %>    
    <!-- Flex container with right alignment -->
    <div class="d-flex flex-wrap justify-content">
        <% courses.forEach(function(course) { %>
            <div class="card mx-2 mb-4" style="width: 18rem;">
                <img src="<%= course.MIME_TYPE %>,<%= course.COVER_IMAGE %>" class="card-img-top" alt="<%= course.TITLE %>">
                <div class="card-body">
                    <h5 class="card-title"><%= course.TITLE %></h5>
                    <p class="card-text"><%= course.DESCRIPTION %></p>
                    <% if (session.user.STATUS == '1') { %>
                        <a href="/course?id=<%= course.ID %>" class="btn btn-primary">View Details</a>
                    <% } else { %>
                        <a href="/lesson?courseId=<%= course.ID %>" class="btn btn-primary">View Details</a>
                    <% } %>
                </div>
            </div>
        <% }); %>

    
</div>

<%- include('partials/footer') %>
