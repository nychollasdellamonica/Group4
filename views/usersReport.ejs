<%- include('partials/header') %>
<%- include('partials/menu') %>

<div class="container mt-5">
    <h2>User Details</h2>

    <div class="row justify-content-end mb-3">
        <div class="col-auto">
            <a href="/addUser" class="btn btn-primary">Add New User</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Status</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Actions</th> 
            </tr>
        </thead>
        <tbody>
            <% user.forEach(function(userItem) { %>
                <tr>
                    <td><%= userItem.ID %></td>
                    <td><%= userItem.STATUS %></td>
                    <td><%= userItem.USERNAME %></td>
                    <td><%= userItem.EMAIL %></td>
                    <td><%= userItem.FIRST_NAME %></td>
                    <td><%= userItem.LAST_NAME %></td>
                    <td><%= userItem.PHONE %></td>
                    <td><%= userItem.START_DATE %></td>
                    <td><%= userItem.END_DATE %></td>
                    <td>
                        <a href="/editUser?id=<%= userItem.ID %>" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>
